<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../metadata.ejs') %>
        <title>Login</title>
        <link rel="stylesheet" href="login.css">
        <link rel="stylesheet" href="nav.css">
</head>

<body>
    <%- include('../navbar/_nav.ejs') %>

        <div class="signup-container">
            <div class="signup-sections">
                <div class="left-section">
                    <img src="login_image.svg" alt="signup image">
                </div>
                <div class="right-section">
                    <h2>Welcome to AAS</h2>
                    <i class='bx bxs-user'></i>
                    <div class="signup-form">
                        <form action="/login" method="post">
                            <div class="form-entry">
                                <label class="red-asterisk">Email : </label>
                                <input type="text" name="email" placeholder="Example@gmail.com" required>
                            </div>
                            <div class="form-entry">
                                <label class="red-asterisk">Password :</label>
                                <input type="password" name="password" placeholder="Enter password" required>
                            </div>
                            <button class="submit-btn">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
</body>

</html>